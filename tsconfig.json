{
  "compilerOptions": {
    "target": "es3",  
    "module": "ES6",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "declaration": true,                             
    "strict": true,                                      
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strictNullChecks": false
  },
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "./dist/**/*"]
}